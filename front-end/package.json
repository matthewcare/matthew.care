{
	"name": "",
	"description": "",
	"devDependencies": {
		"autoprefixer": "^10.3.7",
		"browser-sync": "^2.27.5",
		"esbuild": "^0.14.25",
		"fs-extra": "^10.0.0",
		"log-symbols": "^4.1.0",
		"mkdirp": "^1.0.4",
		"npm-run-all": "^4.1.5",
		"onchange": "^7.1.0",
		"postcss-cli": "^9.0.1",
		"purgecss": "^4.0.3",
		"rimraf": "^3.0.2",
		"sass": "^1.49.7",
		"terser": "^5.12.0"
	},
	"browserslist": [
		"last 1 version",
		"> 1%",
		"not dead"
	],
	"version": "1.0.0-beta.0",
	"main": "",
	"scripts": {
		"autoprefixer": "postcss -u autoprefixer -r ./dist/**/*.css --no-map",
		"build:css": "npm-run-all sass --parallel purge:core purge:components purge:views --sequential autoprefixer",
		"build:js": "node -e \"require('./build/scripts/buildjs').build()\"",
		"check": "run-p lint:styles lint:scripts -s",
		"check:fix": "run-p lint:styles:fix lint:scripts:fix -s",
		"clean": "rimraf ./dist",
		"clean:js": "rimraf ./dist/scripts",
		"copy": "node -e \"require('./build/scripts/copy').copyDist()\"",
		"copy:favicons": "node -e \"require('./build/scripts/copy').copyFavicons()\"",
		"copy:fonts": "node -e \"require('./build/scripts/copy').copyFonts()\"",
		"copy:images": "node -e \"require('./build/scripts/copy').copyImages()\"",
		"dev": "set NODE_ENV=dev&& npm-run-all clean --parallel build:* copy:favicons copy:fonts copy:images --parallel watch:* serve",
		"production": "set NODE_ENV=prod&& npm-run-all clean --parallel build:* copy:favicons copy:fonts copy:images --sequential copy publish-html",
		"publish-html": "node -e \"require('./build/scripts/publish-html').publishHtml()\"",
		"purge:core": "purgecss --css ./dist/css/*.css -o ./dist/css -c ./build/scripts/purgecss.js",
		"purge:components": "purgecss --css ./dist/css/components/*.css -o ./dist/css/components/ -c ./build/scripts/purgecss.js",
		"purge:views": "purgecss --css ./dist/css/views/*.css -o ./dist/css/views/ -c ./build/scripts/purgecss.js",
		"start": "npm run dev",
		"sass": "sass ./src/styles/style.scss:./dist/css/style.css --style compressed",
		"serve": "browser-sync start --config build/scripts/browsersync.js",
		"watch:html": "onchange  \"**/*.html\" -- run-s build:css",
		"watch:js": "onchange \"./src/scripts\" -- run-s build:js",
		"watch:sass": "onchange \"./src/styles\" -- run-s sass",
		"watch:favicons": "onchange -f 'add change' \"./src/static/favicons\"  -- run-s copy:favicons",
		"watch:fonts": "onchange -f 'add change' \"./src/static/fonts\" -- run-s copy:fonts",
		"watch:images": "onchange -f 'add change' \"./src/static/img\" -- run-s copy:images"
	}
}
