@inherits UmbracoViewPage<CvPage>

<partial name="Partials/Navigation/MainNavigation" />

<div class="uk-container uk-margin">

    <div class="uk-width-2-3@m uk-margin-auto uk-text-center">
        <h1>@Model.PageTitleOrDefault()</h1>
        @Model.IntroContent
    </div>

    <div class="uk-grid uk-grid-large uk-margin-medium">
        <div class="uk-width-2-3@m uk-margin-bottom">
            <section class="m-timeline">
                @foreach (var item in Model.Content.Select(x => (ElementTimelineItem)x.Content))
                {
                    <article>
                        <div class="m-timeline__date">
                            <time>@item.Tag</time>
                        </div>
                        <div class="m-timeline__info">
                            <h1>@item.Heading</h1>
                            <h2>— @item.SubHeading</h2>
                            @item.Content
                        </div>
                    </article>
                }
            </section>
        </div>
        <div class="uk-width-1-3@m">
            <h2>@Model.SkillsHeading</h2>
            <ul class="uk-list uk-list-collapse">
                @foreach (var skill in Model.Skills)
                {
                    <li>@skill</li>
                }
            </ul>

        </div>
    </div>

    <div class="m-menu uk-hidden@m uk-text-center">
        <partial name="Partials/Navigation/ButtonNavigation" />
    </div>
</div>