@inherits UmbracoViewPage<MusicPage>

<div class="uk-width-2-3@m uk-margin-auto uk-text-center">
    <h1>@Model.PageTitleOrDefault()</h1>
    @Model.Content
</div>

<div class="uk-grid uk-child-width-1-2@s uk-child-width-1-3@m uk-margin-medium">
    @foreach (var track in Model.Tracks?.Select(x => (ElementMusicItem)x.Content) ?? Array.Empty<ElementMusicItem>())
    {
        <figure class="uk-margin-small-top uk-margin-small-bottom uk-text-center">
            <figcaption>@track.Heading</figcaption>
            <audio controls src="@track.Audio.Content.Url()" class="uk-width"></audio>
        </figure>
    }
</div>